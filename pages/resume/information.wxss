/* pages/resume/information.wxss */
.wrap{
    background: #fff;
    margin: 5px 10px 10px 10px;
}
.wra{
    display: flex;
    border-bottom: 1px solid #dadada;
    padding-bottom:5px;
}
.wra image{
    width: 70px;
    height: 70px;
    border-radius:15%;
    margin-left:10px;
    margin-top:15px;
}
.info {
    font-size:14px;
    padding:5px 10px;
    color:#323232;
    height:30px;
    line-height:30px;
    background:#dbf6f4;
}

.information1{
    width:73%;
    float: right;
}
.information2{
    color:#818181;
    font-size:14px;
    height:25px; 
    line-height:25px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.weui{
    flex:1;
    margin-left:30px;
    margin-right:10px;
    margin-top:10px;
}
.input-text{
    color:ff3333;
    padding:2px 2px 2px 10px;
    border-radius:5px;
    font-size:12px;
    border:1px solid #dadada;
}
.addbutn {
    margin-left:50px;
    margin-right:50px;
    margin-top:20px;
    background:#39bfb2;
    border-radius:5px;
    line-height: 40px;
    height: 40px;
    color:#ffffff;
    align-items:center;
    align-self:center;
}
.sex{
    float:right;
    margin-top:10px;
}

.weui_cell{
    position: relative;
    display: flex;
    padding: 15px;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 1px solid #dadada;
}
.weui_cell_hd{
    display: inline-block;
    width: 20px;
    margin-right: 5px;
}
.weui_cell_bd{
    display: inline-block;
}
.weui_cell_bd_p{
    font-size: 14px;
    color: #939393;
}
.with_arrow{
    position: absolute;
    right: 15px;
    width: 15px;
    height: 15px;
    background-repeat: no-repeat;
    background-size: 100% 100%;
}
.timeView{
    position: absolute;
    right: 30px;
    font-size: 14px;
    color: #939393;
    width:70%;
    overflow:hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: right;
}
.hidden{
    display:none;
}
.citybody{
    width: 100%; 
    height: 300px;
    background: #fff;
    z-index: 999;
}