
@import "../index/index.wxss";


.weui-search-bar {
    position: relative;
    padding: 8px 10px;
    display: flex;
    flex: 1;
    border-radius: 6px;
    box-sizing: border-box;

}
.weui-icon-search {
    margin-right: 8px;
    font-size:inherit;
}

.weui-icon-search_in-box {
    position: absolute;
    left: 10px;
    
}
.weui-search-bar__text{
    display: inline-block;
    font-size: 12px;
    vertical-align: middle;
}
.weui-search-bar__form {
    position: relative;
    flex: auto;
    border-radius: 5px;
  
}
.weui-search-bar__box {
    position: relative;
    padding-left: 30px;
    padding-right: 30px;
    width: 100%;
    box-sizing: border-box;
    z-index: 1;
    color: #9B9B9B;
    background: #FFFFFF;
}
.weui-search-bar__input {
    height:28px;
    line-height: 28px;
    font-size: 12px;
}
.weui-icon-clear {
    position: absolute;
    top: 0;
    right: 0;
    padding: 1px 8px;
    font-size: 0;
}
.weui-search-bar__label {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 2;
    border-radius: 3px;
    text-align: center;
    color: #9B9B9B;
    background: #FFFFFF;
    line-height: 28px;
}
.weui-search-bar__cancel-btn {
    margin-left: 10px;
    line-height: 28px;
    color: #ffffff;
    white-space: nowrap;
}

